<Page x:Class="JXHighWay.WatchHouse.WFPClient.LED"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JXHighWay.WatchHouse.WFPClient"
      mc:Ignorable="d" 
      d:DesignHeight="460" d:DesignWidth="1024"
      Title="LED" Loaded="Page_Loaded">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resource\CheckboxResource.xaml" />
                <ResourceDictionary Source="Resource\GroupboxResource.xaml" />
                <ResourceDictionary Source="Resource\ButtonResource.xaml" />
                <ResourceDictionary Source="Resource\GreenButtonResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="#245d7c">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="177*"/>
            <ColumnDefinition Width="184*"/>
            <ColumnDefinition Width="484*"/>
            <ColumnDefinition Width="179*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions >
            <RowDefinition Height="38*"  />
            <RowDefinition Height="38*" />
            <RowDefinition Height="39*" />
        </Grid.RowDefinitions>
        <Image x:Name="image" HorizontalAlignment="Left" Height="147" VerticalAlignment="Top" Width="147" Grid.Column="1" Margin="19,2,0,0" Source="Images/LED/LED.jpg" Grid.Row="1"/>
        <GroupBox Style="{StaticResource GroupboxWithoutWhiteBorder}" x:Name="groupBox_Copy4" Header="文本编辑" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Margin="10,0,0,0" Height="146" Width="464" FontSize="18" Foreground="#FFF5F1F1" BorderBrush="#FF91ACBD">
            <Label x:Name="label_Copy3" Content="文本内容" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,39,0,0" Foreground="#FFF7F3F3"/>
        </GroupBox>
        <GroupBox Style="{StaticResource GroupboxWithoutWhiteBorder}" x:Name="groupBox_Copy" Header="视频编辑" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Margin="10,150,0,0" Height="146" Width="464" FontSize="18" Foreground="#FFF5F1F1" BorderBrush="#FF91ACBD" Grid.RowSpan="2"/>
        <GroupBox Style="{StaticResource GroupboxWithoutWhiteBorder}" x:Name="groupBox_Copy1" Header="图片编辑" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Margin="10,0,0,0" Height="146" Width="464" FontSize="18" Foreground="#FFF5F1F1" BorderBrush="#FF91ACBD" Grid.Row="2">
            <Button x:Name="button_TuPian_LiuLan_Copy1" Content="浏　览" HorizontalAlignment="Left" Margin="420,392,-43,-309" VerticalAlignment="Top" Width="75" Height="33" Style="{DynamicResource GreenButton}" Click="button_TuPian_LiuLan_Click"/>
        </GroupBox>
        <TextBox x:Name="textBox_Text" HorizontalAlignment="Left" Height="126" Margin="113,16,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="271" Grid.Column="2"/>
        <TextBox x:Name="textBox_ShiPing" HorizontalAlignment="Left" Height="25" Margin="113,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="352" Grid.Column="2" Grid.Row="1"/>
        <TextBox x:Name="textBox_TuPian" HorizontalAlignment="Left" Height="25" Margin="113,42,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="352" Grid.Column="2" Grid.Row="2"/>
        <Button x:Name="button_Text_ShangChuang" Content="发　送" Grid.Column="2" HorizontalAlignment="Left" Margin="391.667,35,0,0" VerticalAlignment="Top" Width="75" Height="33" Style="{DynamicResource GreenButton}" Click="button_Text_ShangChuang_Click"/>
        <Button x:Name="button_Text_QunFa" Content="群　发" Grid.Column="2" HorizontalAlignment="Left" Margin="391.667,96,0,0" VerticalAlignment="Top" Width="75" Height="33" Style="{DynamicResource GreenButton}" Click="button_Text_QunFa_Click"/>
        <Button x:Name="button_Text_ShangChuang_Copy" Content="浏　览" Grid.Column="2" HorizontalAlignment="Left" Margin="58.667,84,0,0" VerticalAlignment="Top" Width="75" Height="33" Style="{DynamicResource GreenButton}" Click="button_ShiPing_LiuLan_Click" Grid.Row="1"/>
        <Button x:Name="button_Text_ShangChuang_Cop1y" Content="浏　览" Grid.Column="2" HorizontalAlignment="Left" Margin="58.667,84,0,0" VerticalAlignment="Top" Width="75" Height="33" Style="{DynamicResource GreenButton}" Click="button_ShiPing_LiuLan_Click" Grid.Row="1"/>
        <Button x:Name="button_ShiPing_ShangChuang" Content="发　送" Grid.Column="2" HorizontalAlignment="Left" Margin="212.667,84,0,0" VerticalAlignment="Top" Width="75" Height="33" Style="{DynamicResource GreenButton}" Click="button_ShiPing_ShangChuang_Click" Grid.Row="1"/>
        <Button x:Name="button_ShiPing_QunFa" Content="群　发" Grid.Column="2" HorizontalAlignment="Left" Margin="367.667,84,0,0" VerticalAlignment="Top" Width="75" Height="33" Style="{DynamicResource GreenButton}" Grid.Row="1" Click="button_ShiPing_QunFa_Click"/>
        <Button x:Name="button_TuPian_LiuLan" Content="浏　览" Grid.Column="2" HorizontalAlignment="Left" Margin="58.667,88,0,0" VerticalAlignment="Top" Width="75" Height="33" Style="{DynamicResource GreenButton}" Click="button_TuPian_LiuLan_Click" Grid.Row="2"/>
        <Button x:Name="button_TuPian_ShangChuang" Content="发　送" Grid.Column="2" HorizontalAlignment="Left" Margin="212.667,88,0,0" VerticalAlignment="Top" Width="75" Height="33" Style="{DynamicResource GreenButton}" Grid.Row="2" Click="button_TuPian_ShangChuang_Click"/>
        <Button x:Name="button_TuPian_QunFa" Content="群　发" Grid.Column="2" HorizontalAlignment="Left" Margin="367.667,88,0,0" VerticalAlignment="Top" Width="75" Height="33" Style="{DynamicResource GreenButton}" Grid.Row="2" Click="button_TuPian_QunFa_Click"/>
    </Grid>
</Page>
